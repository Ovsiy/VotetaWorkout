<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.AddWorkoutActivity">

    <ExpandableListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:choiceMode="multipleChoice"
        android:id="@+id/instancesExpandableList"
        android:layout_centerHorizontal="true"
        tools:listitem="@layout/listview_category"
        android:layout_above="@+id/buttons_placeholder"/>

    <RelativeLayout
        android:id="@+id/buttons_placeholder"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:padding="@dimen/text_margin">

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/button_save_workout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_check_black_24dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/button_add_exercise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_add_white_24dp"
            android:layout_gravity="end"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="@dimen/text_margin"/>

    </RelativeLayout>


</RelativeLayout>
